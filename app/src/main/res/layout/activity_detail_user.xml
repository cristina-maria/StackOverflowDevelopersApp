<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cristina.developersapp.DetailUser"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/userName"
        android:layout_marginRight="145dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintRight_toLeftOf="@+id/userName"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.252"
        />

    <TextView
        android:id="@+id/userLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/userName"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.392" />

    <TextView
        android:id="@+id/badges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/badges"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="71dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/goldBadges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gold_badges"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/badges"
        android:layout_marginLeft="28dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/silverBadges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/silver_badges"
        app:layout_constraintLeft_toRightOf="@+id/goldBadges"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="-1dp"
        app:layout_constraintTop_toBottomOf="@+id/badges" />

    <TextView
        android:id="@+id/bronzeBadges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bronze_badges"
        app:layout_constraintLeft_toRightOf="@+id/silverBadges"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/badges"
        app:layout_constraintHorizontal_bias="0.483" />

    <TextView
        android:id="@+id/goldBadgesNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginLeft="39dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="-8dp"
        app:layout_constraintTop_toBottomOf="@+id/goldBadges" />

    <TextView
        android:id="@+id/silverBadgesNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/goldBadgesNumber"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="-8dp"
        app:layout_constraintTop_toBottomOf="@+id/silverBadges" />

    <TextView
        android:id="@+id/bronzeBadgesNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/silverBadgesNumber"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="-8dp"
        app:layout_constraintTop_toBottomOf="@+id/bronzeBadges"
        app:layout_constraintHorizontal_bias="0.483" />


</android.support.constraint.ConstraintLayout>
